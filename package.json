{
  "name": "elm-pages-app",
  "type": "module",
  "scripts": {
    "postinstall": "cd frontend && elm-tooling install",
    "start": "cd frontend && elm-pages dev",
    "build": "cd frontend && elm-pages build",
    "test:e2e": "npx playwright test",
    "test:elm": "cd frontend && npx elm-test --fuzz 10000",
    "fetch": "npx tsx scripts/fetch_books.ts",
    "import": "npx tsx scripts/import.ts",
    "db:codegen": "npx kysely-codegen --dialect sqlite --url books.db --out-file frontend/custom-tasks/db-types.ts",
    "db:verify": "npm run db:codegen -- --verify"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.0",
    "better-sqlite3": "^12.4.1",
    "elm-codegen": "^0.6.1",
    "elm-optimize-level-2": "^0.3.5",
    "elm-pages": "3.0.24",
    "elm-review": "^2.12.0",
    "elm-test": "^0.19.1-revision17",
    "elm-tooling": "^1.15.1",
    "kysely": "^0.28.8",
    "kysely-codegen": "^0.19.0",
    "lamdera": "^0.19.1-1.3.2",
    "node-fetch": "^3.3.2",
    "p-queue": "^9.0.0",
    "slugify": "^1.6.6",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^6.0.6",
    "wait-on": "^9.0.1"
  }
}